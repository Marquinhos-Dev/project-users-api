{
  "name": "api-users",
  "description": "",
  "version": "1.0.0",
  "main": "app.ts",
  "scripts": {
    "dev": "ts-node-dev --env-file=.env src/app.ts",
    "build": "tsc -p",
    "start": "node dist/src/app.js",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d src/infrastructure/db/postgres/data-source.ts",
    "migration:create": "npm run typeorm -- migration:create src/infrastructure/db/postgres/migrations/%npm_config_name%",
    "migration:generate": "npm run typeorm -- migration:generate src/infrastructure/db/postgres/migrations/%npm_config_name%",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": "",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.6",
    "dotenv": "^16.4.7",
    "express": "^4.19.2",
    "express-openapi-validator": "^4.13.8",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "traceability": "^3.2.2",
    "typeorm": "^0.3.26"
  }
}
